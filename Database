import sqlite3

#Create Database file
conn = sqlite3.connect("mydb.db")
cursor = conn.cursor()
#Create Books Table
cursor.execute("""
CREATE TABLE IF NOT EXISTS books(
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        title TEXT NOT NULL,
        author TEXT,
        year INTEBER,
        genre TEXT)
        """)
conn.commit()

#Insert data into Books Table
books_data = [
    (1,"To Kill a Mockingbird","Harper Lee",1960,"Southen Gethic/Coming of Age"),
    (2,"1984","George Orwell",1949,"Political Fiction"),
    (3,"Beloved","Toni Marrison",1987,"Historical Fiction"),
    (4,"The Road","Cormac McCarthy",2006,"Post-Apocalyptic Fiction"),
    (5,"The Name Of The Wind","Patric Rithfuss",2007,"Epic Fantasy")
        ]
cursor.executemany('''
        INSERT INTO books (id, title, author, year, genre)
        VALUES (?,?,?,?,?)''',books_data)
conn.commit()

#Verify inserted data
cursor.execute('SELECT * FROM books')
for row in cursor.fetchall():
    print(row)

conn.close()
